{
    "name": "bgoewert/pardot",
    "description": "Connect your WordPress site to Pardot.",
    "license": "GPL-2.0-or-later",
    "scripts": {
      "phpcs-setup": "./vendor/bin/phpcs --config-set installed_paths $PWD/vendor/wp-coding-standards/wpcs,$PWD/vendor/phpcompatibility/php-compatibility,$PWD/vendor/phpcompatibility/phpcompatibility-paragonie,$PWD/vendor/phpcompatibility/phpcompatibility-wp",
      "phpcs": "./vendor/bin/phpcs",
      "phpcbf": "./vendor/bin/phpcbf"
    },
    "require-dev": {
        "wp-coding-standards/wpcs": "dev-develop",
        "phpcsstandards/phpcsutils": "dev-develop",
        "phpcompatibility/php-compatibility": "^9.3",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "phpcompatibility/phpcompatibility-paragonie": "^1.3"
    },
    "minimum-stability": "dev",
    "config": {
      "allow-plugins": {
        "dealerdirect/phpcodesniffer-composer-installer": true
      }
    }
}
